# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=mlops-project-models

# Deployment Environment
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# API Limits
MAX_BATCH_SIZE=1000
RATE_LIMIT=100/minute

# Retry Configuration
S3_RETRY_ATTEMPTS=3
S3_RETRY_MIN_WAIT=2
S3_RETRY_MAX_WAIT=10

# Model Management
MODEL_RELOAD_INTERVAL=300

# Drift Detection
DRIFT_CHECK_INTERVAL=3600
DRIFT_WINDOW_SIZE=1000
DRIFT_PSI_THRESHOLD=0.2
DRIFT_KS_THRESHOLD=0.1

# Monitoring
ENABLE_PROMETHEUS=true
ENABLE_DRIFT_DETECTION=true
